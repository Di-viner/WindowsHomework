<Window x:Class="EX2_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EX2_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="选择文件监视目录" HorizontalAlignment="Left" Margin="665,54,0,0" VerticalAlignment="Top" Width="125" Height="30" Click="Button_Click"/>
        <Button Content="启动文件目录监视" HorizontalAlignment="Left" Margin="665,89,0,0" VerticalAlignment="Top" Width="125" Height="30" Click="Button_Click_1"/>
        <Button Content="终止文件目录监视" HorizontalAlignment="Left" Margin="665,124,0,0" VerticalAlignment="Top" Width="125" Height="30" Click="Button_Click_2"/>
        <Button Content="启动抓屏线程" HorizontalAlignment="Left" Margin="665,160,0,0" VerticalAlignment="Top" Width="125" Height="30" Click="Button_Click_3"/>
        <Button Content="抓屏" HorizontalAlignment="Left" Margin="665,194,0,0" VerticalAlignment="Top" Width="125" Height="30" Click="Button_Click_4"/>
        <Button Content="结束抓屏线程" HorizontalAlignment="Left" Margin="665,230,0,0" VerticalAlignment="Top" Width="125" Height="30" Click="Button_Click_5"/>
        <ListBox x:Name="lbx_disp" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,140,10"/>

    </Grid>
</Window>
